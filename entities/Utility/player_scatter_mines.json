{
  "format_version": "1.17.0",
  "minecraft:entity": {
    "description": {
      "identifier": "dungeons:player_scatter_mine",
      "is_summonable": true,
      "is_spawnable": false,
      "is_experimental": false
    },
    "component_groups": {
      "dungeons:despawn": {
        "minecraft:instant_despawn": {}
      },
      "dungeons:explode": {
        "minecraft:behavior.knockback_roar": {
          "attack_time": 0.05,
          "cooldown_time": 0,
          "duration": 0.05,
          "knockback_damage": 20,
          "knockback_filters": {
            "test": "is_owner",
            "subject": "other",
            "value": false
          },
          "damage_filters": {
            "all_of": [{
                "any_of": [{
                    "test": "is_family",
                    "subject": "other",
                    "operator": "==",
                    "value": "mob"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "operator": "==",
                    "value": "player"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "operator": "==",
                    "value": "monster"
                  }
                ]
              },
              {
                "test": "is_owner",
                "subject": "other",
                "value": false
              }
            ]
          },
          "knockback_height_cap": 10,
          "knockback_horizontal_strength": 1.75,
          "knockback_range": 1.5,
          "knockback_vertical_strength": 1.75,
          "on_roar_end": {
            "event": "dungeons:despawn",
            "target": "self"
          }
        }
      }
    },
    "components": {
      "minecraft:type_family": {
        "family": [
          "inanimate",
          "artefact"
        ]
      },
      "minecraft:health": {
        "max": 20,
        "value": 20
      },
      "minecraft:damage_sensor": {
        "triggers": [{
          "cause": "all",
          "deals_damage": false
        }]
      },
      "minecraft:tameable": {
        "probability": 1.0
      },
      "minecraft:custom_hit_test": {
        "hitboxes": [{
          "pivot": [0, 1000, 0],
          "width": 0,
          "height": 0
        }]
      },
      "minecraft:timer": {
        "looping": false,
        "randomInterval": true,
        "time": [13, 15],
        "time_down_event": {
          "event": "dungeons:explode"
        }
      },
      "minecraft:knockback_resistance": {
        "value": 1.0
      },
      "minecraft:collision_box": {
        "width": 0.001,
        "height": 0.001
      },
      "minecraft:entity_sensor": {
        "sensor_range": 1,
        "relative_range": false,
        "minimum_count": 1,
        "event_filters": {
          "all_of": [{
              "any_of": [{
                  "test": "is_family",
                  "subject": "other",
                  "operator": "==",
                  "value": "mob"
                },
                {
                  "test": "is_family",
                  "subject": "other",
                  "operator": "==",
                  "value": "player"
                },
                {
                  "test": "is_family",
                  "subject": "other",
                  "operator": "==",
                  "value": "monster"
                }
              ]
            },
            {
              "test": "is_owner",
              "subject": "other",
              "value": false
            }
          ]
        },
        "event": "dungeons:explode"
      },
      "minecraft:tick_world": {},
      "minecraft:physics": {},
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": false
      }
    },
    "events": {
      "dungeons:explode": {
        "queue_command": {
          "command": [
            "summon dungeons:player_mine_explosion",
            "particle dungeons:scatter_mine_boom ~~1.25~",
            "playsound random.explode @a ~~~"
          ]
        },
        "add": {
          "component_groups": [
            "dungeons:despawn"
          ]
        }
      }
    }
