{
  "format_version": "1.13.0",
  "minecraft:entity": {
    "description": {
      "identifier": "edx:boss_fire_strike",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "runtime_identifier":"arrow"
    },
    "component_groups": {
      "despawn": {
        "minecraft:instant_despawn": {
         "remove_child_entities": true
        }
     }
    },

    "components": {
      "minecraft:scale": {
        "value": 2
        },
      "minecraft:type_family": {
        "family": [
          "fire_strike"
        ]
      },
      "minecraft:timer": {
        "time": [ 4, 4 ],
        "looping": true,
        "time_down_event": {
          "event": "despawn",
          "target": "self"
        }
      },
      "minecraft:collision_box": {
        "width": 0.8,
        "height": 0.8
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:projectile": {
        "on_hit": {
          "impact_damage": {
            "damage": 10,
            "knockback": false,
            "semi_random_diff_damage": false,
            "destroy_on_hit": false
          }
        },
        "power": 1,
        "gravity": 0.00,
        "inertia": 1.00,
        "anchor": 1,
        "should_bounce": false,
        "offset": [ 0, 0, 0 ]
      },
      "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      "minecraft:conditional_bandwidth_optimization": {
        "default_values": {
          "max_optimized_distance": 80.0,
          "max_dropped_ticks": 7,
          "use_motion_prediction_hints": true
        }
      }
    },

    "events": {
      "despawn": {
				"add": {
					"component_groups": ["despawn"]
				}
			}
    }

  }
}
