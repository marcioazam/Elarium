{
  "format_version": "1.8.0",
  "minecraft:spawn_rules": {
    "description": {
      "identifier": "minecraft:cave_spider",
      "population_control": "monster"
    },
    "conditions": [
      {
        "minecraft:spawns_on_surface": {
        },
        
        "minecraft:spawns_underground": {
        },
        "minecraft:spawns_on_block_prevented_filter": [
          "edx:redwood_leaves"
        ],
        "minecraft:brightness_filter": {
          "min": 0,
          "max": 8,
          "adjust_for_weather": true
        },

        "minecraft:difficulty_filter": {
          "min": "easy",
          "max": "hard"
        },

        "minecraft:weight": {
          "default": 40
        },
        
        "minecraft:biome_filter":  [
          {
            "any_of": [
              {
                "test": "has_biome_tag", "operator": "==", "value": "caves"
              },
              {
                  "test": "has_biome_tag", "operator": "==", "value": "lush_caves"
              },
              {
                  "test": "has_biome_tag", "operator": "==", "value": "dripstone_caves"
              },
              {
                "test": "has_biome_tag",
                "operator": "==",
                "value": "jungle"
              },
              {
                "test": "has_biome_tag",
                "operator": "==",
                "value": "jungle_hills"
              },
              {
                "test": "has_biome_tag",
                "operator": "==",
                "value": "jungle_mutated"
              },
              {
                "test": "has_biome_tag",
                "operator": "==",
                "value": "jungle_edge"
              },
              {
                "test": "has_biome_tag",
                "operator": "==",
                "value": "jungle_edge_mutated"
              },
              {
                "test": "has_biome_tag",
                "operator": "==",
                "value": "bamboo_jungle"
              },
              {
                "test": "has_biome_tag",
                "operator": "==",
                "value": "bamboo_jungle_hills"
              }
            ]
          }
        ]
      }
    ]
  }
}